#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>  //toupper ve tolower kullanmak icin.
int main()
{
    char cumle[200];
    char Up_cumle[200];
    printf("cumle gir\n");
    gets(cumle);
    for(int i=0;i<strlen(cumle);i++)
    {
        if(cumle[i]!=' '){
        Up_cumle[i]=toupper(cumle[i]);
        printf("%c ---> %c\n",cumle[i],Up_cumle[i]);
        }
        else
            printf(" \n");

    }

    return 0;
}
